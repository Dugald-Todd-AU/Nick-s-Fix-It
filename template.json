{
  "name": "hairdressing",
  "displayName": "Hair Salon",
  "description": "Template for hairdressing salons and beauty businesses in regional Australia",
  "vertical": "hairdressing",
  "version": "1.0.0",
  "colors": {
    "primary": "#d4a574",
    "primaryDark": "#b8956a",
    "secondary": "#c08497",
    "secondaryDark": "#a87085"
  },
  "requiredFields": {
    "businessName": {
      "type": "string",
      "required": true,
      "placeholder": "Amber's Hair Parlour",
      "description": "The business name"
    },
    "region": {
      "type": "string",
      "required": true,
      "placeholder": "St George, Queensland",
      "description": "Service area/region or suburbs"
    },
    "phone": {
      "type": "string",
      "required": true,
      "placeholder": "(07) 4625 1693",
      "description": "Contact phone number (clickable)"
    },
    "email": {
      "type": "string",
      "required": false,
      "placeholder": "{{EMAIL_ADDRESS}}",
      "description": "Contact email"
    },
    "services": {
      "type": "array",
      "required": true,
      "placeholder": "Women's Cuts & Styling, Colour Foils & Lightening, Men's Cuts, Special Occasion Hair",
      "description": "List of main services offered"
    },
    "serviceDescriptions": {
      "type": "object",
      "required": false,
      "placeholder": "Service descriptions object",
      "description": "Detailed descriptions for each service"
    },
    "suburbs": {
      "type": "array",
      "required": false,
      "placeholder": "Suburb list",
      "description": "List of suburbs serviced"
    },
    "address": {
      "type": "string",
      "required": false,
      "placeholder": "St George, Queensland",
      "description": "Business address or service region"
    },
    "ctaText": {
      "type": "string",
      "required": false,
      "placeholder": "Request a Free Quote",
      "default": "Book your appointment",
      "description": "Main call-to-action text"
    },
    "formEndpoint": {
      "type": "string",
      "required": false,
      "placeholder": "{{FORMSPREE_ENDPOINT}}",
      "description": "Form submission endpoint (Formspree, FormSubmit, or custom API route)"
    },
    "abn": {
      "type": "string",
      "required": false,
      "placeholder": "{{ABN}}",
      "description": "Australian Business Number (ABN)"
    },
    "licenseNumber": {
      "type": "string",
      "required": false,
      "placeholder": "{{LICENSE_NUMBER}}",
      "description": "Business license or registration number"
    },
    "insuranceProvider": {
      "type": "string",
      "required": false,
      "placeholder": "{{INSURANCE_PROVIDER}}",
      "description": "Insurance provider name (optional)"
    },
    "yearsExperience": {
      "type": "string",
      "required": false,
      "placeholder": "15+ years",
      "description": "Years of experience (e.g., '20+' or '15')"
    },
    "operatingHours": {
      "type": "string",
      "required": false,
      "placeholder": "Call to book your appointment",
      "description": "Operating hours (e.g., 'Mon-Fri: 9am-5pm, Sat: 9am-2pm' or 'By appointment')"
    },
    "socialFacebook": {
      "type": "string",
      "required": false,
      "placeholder": "{{SOCIAL_FACEBOOK}}",
      "description": "Facebook page URL"
    },
    "socialInstagram": {
      "type": "string",
      "required": false,
      "placeholder": "{{SOCIAL_INSTAGRAM}}",
      "description": "Instagram profile URL"
    },
    "socialWebsite": {
      "type": "string",
      "required": false,
      "placeholder": "{{SOCIAL_WEBSITE}}",
      "description": "Website URL"
    },
    "testimonials": {
      "type": "array",
      "required": false,
      "placeholder": "Testimonials array",
      "description": "Array of testimonial objects"
    },
    "projects": {
      "type": "array",
      "required": false,
      "placeholder": "Projects array",
      "description": "Array of featured project objects"
    },
    "newsTitle1": {
      "type": "string",
      "required": false,
      "placeholder": "{{NEWS_TITLE_1}}",
      "description": "Latest news article title"
    },
    "newsExcerpt1": {
      "type": "string",
      "required": false,
      "placeholder": "{{NEWS_EXCERPT_1}}",
      "description": "Latest news article excerpt"
    },
    "tipTitle1": {
      "type": "string",
      "required": false,
      "placeholder": "{{TIP_TITLE_1}}",
      "description": "Expert tip title"
    },
    "tipExcerpt1": {
      "type": "string",
      "required": false,
      "placeholder": "{{TIP_EXCERPT_1}}",
      "description": "Expert tip excerpt"
    },
    "projectSpotlightTitle": {
      "type": "string",
      "required": false,
      "placeholder": "{{PROJECT_SPOTLIGHT_TITLE}}",
      "description": "Featured project spotlight title"
    },
    "projectSpotlightExcerpt": {
      "type": "string",
      "required": false,
      "placeholder": "{{PROJECT_SPOTLIGHT_EXCERPT}}",
      "description": "Featured project spotlight excerpt"
    }
  },
  "replacements": {
    "Amber's Hair Parlour": "businessName",
    "St George, Queensland": "region",
    "(07) 4625 1693": "phone",
    "{{EMAIL_ADDRESS}}": "email",
    "Women's Cuts & Styling": "services[0]",
    "Colour, Foils & Lightening": "services[1]",
    "Men's Cuts": "services[2]",
    "Special Occasion Hair": "services[3]",
    "St George, Queensland": "address",
    "{{FORMSPREE_ENDPOINT}}": "formEndpoint",
    "{{ABN}}": "abn",
    "{{LICENSE_NUMBER}}": "licenseNumber",
    "{{INSURANCE_PROVIDER}}": "insuranceProvider",
    "over 30 years": "yearsExperience",
    "Mon–Fri: 7 am–5 pm": "operatingHours",
    "{{SOCIAL_FACEBOOK}}": "socialFacebook",
    "{{SOCIAL_INSTAGRAM}}": "socialInstagram",
    "{{SOCIAL_WEBSITE}}": "socialWebsite",
    "{{TESTIMONIAL_NAME_1}}": "testimonials[0].name",
    "{{TESTIMONIAL_SUBURB_1}}": "testimonials[0].suburb",
    "{{TESTIMONIAL_TEXT_1}}": "testimonials[0].text",
    "{{TESTIMONIAL_NAME_2}}": "testimonials[1].name",
    "{{TESTIMONIAL_SUBURB_2}}": "testimonials[1].suburb",
    "{{TESTIMONIAL_TEXT_2}}": "testimonials[1].text",
    "{{TESTIMONIAL_NAME_3}}": "testimonials[2].name",
    "{{TESTIMONIAL_SUBURB_3}}": "testimonials[2].suburb",
    "{{TESTIMONIAL_TEXT_3}}": "testimonials[2].text",
    "{{TESTIMONIAL_NAME_4}}": "testimonials[3].name",
    "{{TESTIMONIAL_SUBURB_4}}": "testimonials[3].suburb",
    "{{TESTIMONIAL_TEXT_4}}": "testimonials[3].text",
    "{{PROJECT_1_NAME}}": "projects[0].name",
    "{{PROJECT_1_SUBURB}}": "projects[0].suburb",
    "{{NEWS_TITLE_1}}": "newsTitle1",
    "{{NEWS_EXCERPT_1}}": "newsExcerpt1",
    "{{TIP_TITLE_1}}": "tipTitle1",
    "{{TIP_EXCERPT_1}}": "tipExcerpt1",
    "{{PROJECT_SPOTLIGHT_TITLE}}": "projectSpotlightTitle",
    "{{PROJECT_SPOTLIGHT_EXCERPT}}": "projectSpotlightExcerpt",
    "Book your appointment": "ctaText",
    "#d4a574": "colors.primary",
    "#b8956a": "colors.primaryDark",
    "#c08497": "colors.secondary",
    "#a87085": "colors.secondaryDark"
  },
  "pages": [
    {
      "path": "/",
      "name": "Home",
      "components": ["Header", "ExperienceCounter", "WhyChooseUs", "Services", "Testimonials", "Gallery", "CTA", "Footer"]
    },
    {
      "path": "/services",
      "name": "Services",
      "components": ["Header", "ServicesPage", "MapOrRegionList", "Gallery", "CTA", "Footer"]
    },
    {
      "path": "/contact",
      "name": "Contact",
      "components": ["Header", "ContactHero", "ContactForm", "TrustBadges", "Footer"]
    }
  ]
}

